@page
@model Garage_Management_System.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HC GARAGE</title>
    <link rel="icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Delete User Page Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: #2a3f5f;
            color: white;
            padding: 10px 20px;
            border-bottom: 5px solid #007bff;
            display: flex;
            justify-content: center;
            position: relative; /* Added for absolute positioning of logout link */
        }

            header::after { /* Used for centering the title with a flex item on the left */
                content: '';
                margin-right: -50px; /* Adjust this value based on your logout link width */
            }

            header a {
                position: absolute;
                right: 20px; /* Adjust this value as needed */
                top: 50%;
                transform: translateY(-50%);
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

                header a:hover {
                    color: gray; /* Text color on hover */
                }

        footer {
            background-color: #2a3f5f;
            color: white;
            padding: 10px 20px;
            text-align: center;
            border-top: 5px solid #007bff;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .container {
            padding: 20px;
            min-height: 80vh; /* Adjust height to make sure footer stays at bottom */
        }

   
        h2 {
            text-align: center;
            color: #dc3545; /* Red color to indicate deletion */
            margin-bottom: 20px;
        }

        /* Style for the confirmation message */
        h3 {
            text-align: center;
            color: #6c757d;
            margin-bottom: 20px;
        }

        /* Style for the user details section */
        .user-details {
            margin: auto;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            max-width: 500px; /* Adjust as needed */
            background-color: #f8f9fa;
        }

            .user-details dt {
                font-weight: bold;
            }

            .user-details dd {
                margin-left: 20px;
            }

        /* Style for buttons */
        .btn-danger {
            background-color:indianred;
            border-color: #dc3545;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
            border-radius: 4px;
        }

            .btn-danger:hover {
                opacity: 0.8;
            }

        /* Style for the back link */
        a {
            color: #2a3f5f;
            text-decoration: none;
            margin-top: 20px;
            display: inline-block;
        }

            a:hover {
                text-decoration: underline;
                color: black;
            }

    </style>
</head>

<body>
    <header>
        <span>Admin Dashboard</span>
        <a asp-page="/Login">Logout</a>

    </header>
    
    <div class="container">

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
    <div class="user-details">
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Names)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Names)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index">Back to User Management</a>
    </form>
</div>

    </div>
    <footer>
        &copy;HC GARAGE 2023
    </footer>

</body>
</html>