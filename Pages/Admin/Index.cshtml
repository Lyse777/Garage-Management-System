
@page
@model Garage_Management_System.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "User Management";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HC GARAGE</title>
    <link rel="icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: #2a3f5f;
            color: white;
            padding: 10px 20px;
            border-bottom: 5px solid #007bff;
            display: flex;
            justify-content: center;
            position: relative; /* Added for absolute positioning of logout link */
        }

            header::after { /* Used for centering the title with a flex item on the left */
                content: '';
                margin-right: -50px; /* Adjust this value based on your logout link width */
            }

            header a {
                position: absolute;
                right: 20px; /* Adjust this value as needed */
                top: 50%;
                transform: translateY(-50%);
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

                header a:hover {
                    color: gray; /* Text color on hover */
                }

        footer {
            background-color: #2a3f5f;
            color: white;
            padding: 10px 20px;
            text-align: center;
            border-top: 5px solid #007bff;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .container {
            padding: 20px;
            min-height: 80vh; /* Adjust height to make sure footer stays at bottom */
            background-color: white;
        }

        h2 {
            color: #2a3f5f;
            text-align: center;
            margin-bottom: 20px;
        }

        p a {
            display: inline-block;
            background-color: darkgray;
            color: black;
            font-weight: bold;
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            text-decoration: none;
        }

        /* Style for the user table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th,
            .table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .table th {
                background-color: #f8f9fa;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            /* Style for action links */
            .table td a {
                padding: 5px 10px;
                border-radius: 4px;
                text-decoration: none;
                display: inline-block;
                margin-right: 5px;
            }

                .table td a.update {
                    background-color: darkslateblue;
                    color: white;
                }

                .table td a.delete {
                    background-color: indianred;
                    color: white;
                }

                .table td a:hover {
                    opacity: 0.8;
                }

        /* Message when no users are available */
        p {
            text-align: center;
            color: #6c757d;
        }

    </style>


</head>
<body>

    <header>
        <span>Admin Dashboard</span>
        <a asp-page="/Login">Logout</a>

    </header>

    <div class="container">
        <h2>User Management</h2>
        <p>
            <a asp-page="Create">Create New User</a>
        </p>


        @if (Model.Users.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>UserId</th>
                        <th>Names</th>
                        <th>Gender</th>
                        <th>Location</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Names</td>
                            <td>@user.Gender</td>
                            <td>@user.Location</td>
                            <td>@user.Email</td>
                            <td>
                                <span title="@user.Password">
                                    @{
                                        var displayPassword = user.Password.Length > 10 ? user.Password.Substring(0, 10) + "..." : user.Password;
                                    }
                                    @displayPassword
                                </span>
                            </td>


                            <td>@user.RoleName</td>
                            <td>
                                <a asp-page="Update" asp-route-id="@user.Id" class="update">Update</a>
                                <a asp-page="Delete" asp-route-id="@user.Id" class="delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No users have been created Yet.</p>
        }
    </div>
    <br />
    <br />
    <footer>
            &copy;HC GARAGE 2023
    </footer>
</body>
</html>
