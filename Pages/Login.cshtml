@page
@model Garage_Management_System.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HC GARAGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Garage_Management_System.styles.css" asp-append-version="true" />
    <style>
        /* Login Page Styles */

/* General Styles */
body {
    background-color: #f4f7f6; /* Light grey background */
    margin-top: 50px; /* Space at the top of the page */
}

/* Card Styles */
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Adds a shadow around the card */
    transition: 0.3s; /* Animation for the shadow on hover */
    border-radius: 5px; /* Rounded corners for the card */
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); /* Shadow effect on hover */
}

.card-header {
            background-color: #2a3f5f; /* Blue background for the card header */
    color: white; /* White text for the card header */
    padding: 10px 15px; /* Padding inside the card header */
    border-bottom: none; /* Removes the default border */
    border-top-left-radius: 5px; /* Rounds the top left corner */
    border-top-right-radius: 5px; /* Rounds the top right corner */
}

.card-body {
    padding: 20px; /* Padding inside the card body */
}

/* Form Styles */
.form-group label {
    display: block; /* Ensures the label is on a new line */
    margin-bottom: .5rem; /* Spacing below the label */
}

.form-control {
    font-size: 16px; /* Sets the font size for input fields */
    line-height: 1.5; /* Sets the line height for input fields */
    padding: .375rem .75rem; /* Padding inside the input fields */
    border-radius: .25rem; /* Rounds the corners of the input fields */
    border: 1px solid #ced4da; /* Sets the border color */
}

/* Button Styles */
.btn-primary {
    color: #fff; /* White text color */
            background-color: #2a3f5f; /* Blue background color */
    border-color: #007bff; /* Blue border color */
    padding: .375rem .75rem; /* Padding inside the button */
    border-radius: .25rem; /* Rounds the corners of the button */
    font-size: 1rem; /* Sets the font size for the button */
}

.btn-primary:hover {
    color: #fff; /* Keeps the text color white on hover */
    background-color: #0056b3; /* Darker blue background on hover */
    border-color: #004085; /* Darker blue border on hover */
}



    </style>

</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Login</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" autocomplete="off">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="text-danger">
                                @Model.ErrorMessage
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>

  


    

</body>
</html>
