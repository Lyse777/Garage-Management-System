@page
@model Garage_Management_System.Pages.Manager.ServicesManage.DeleteModel
@{
    ViewData["Title"] = "Delete Service";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HC GARAGE</title>
    <link rel="icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<style>


        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: darkslateblue;
            color: white;
            padding: 10px 20px;
            border-bottom: 5px solid #007bff;
            display: flex;
            justify-content: center;
            position: relative; /* Added for absolute positioning of logout link */
        }

            header::after { /* Used for centering the title with a flex item on the left */
                content: '';
                margin-right: -50px; /* Adjust this value based on your logout link width */
            }

            header a {
                position: absolute;
                right: 20px; /* Adjust this value as needed */
                top: 50%;
                transform: translateY(-50%);
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

                header a:hover {
                    color: gray; /* Text color on hover */
                }

        footer {
            background-color: darkslateblue;
            color: white;
            padding: 10px 20px;
            text-align: center;
            border-top: 5px solid #007bff;
            position: fixed;
            bottom: 0;
            width: 100%;
        }


        /* Back link style */
        div a {
            color: #2a3f5f;
            text-decoration: none;
            margin-top: 20px;
            display: inline-block;
        }

            div a:hover {
                text-decoration: underline;
                color: black;
            }
        .container {
            padding: 20px;
            min-height: 80vh; /* Adjust height to make sure footer stays at bottom */
        }

        h2 {
            color: #2a3f5f;
            text-align: center;
            margin-bottom: 20px;
        }
    dl.row dt {
        text-align: left;
        padding: 5px;
        font-weight: bold;
    }

    dl.row dd {
        padding: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    a {
        margin-left: 10px;
    }
</style>
</head>
<body>

    <header>
        <span>Manager Dashboard</span>
        <a asp-page="/Login">Logout</a>
    </header>

    <div class="container">
<h2>Delete Service</h2>

<h3>Are you sure you want to delete this service?</h3>
<dl class="row">
    <dt class="col-sm-2">
        Service Name
    </dt>
    <dd class="col-sm-10">
        @Model.Service.Service_Name
    </dd>
    <dt class="col-sm-2">
        Category
    </dt>
    <dd class="col-sm-10">
        @Model.Service.Category
    </dd>
    <dt class="col-sm-2">
        Price
    </dt>
    <dd class="col-sm-10">
        @Model.Service.Price
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Service.Service_Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a asp-page="./Index">Cancel</a>
</form>

    </div>
    <br />
    <br />
    <footer>
        &copy;HC GARAGE 2023
    </footer>
</body>
</html>